
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}




<div id="content">
    
    <div class="content-main p-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">Trang chủ</li>
                <li class="breadcrumb-item active" aria-current="page">
                    Tổng quan
                </li>
            </ol>
        </nav>
        <div class="container-fluid mt-3">
            <div class="row">
                <div class="col-lg-4 col-sm-6">
                    <div class="card gradient-1">
                        <div class="card-body">
                            <h3 class="card-title text-white">Tổng số sản phẩm</h3>
                            <div class="d-inline-block">
                                <h2 class="text-white">@ViewBag.product</h2>
                              
                            </div>
                            <span class="float-right display-5 opacity-5">
                                <i class="fa fa-shopping-cart"></i>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-sm-6">
                    <div class="card gradient-2">
                        <div class="card-body">
                            <h3 class="card-title text-white">Tổng số đơn hàng</h3>
                            <div class="d-inline-block">
                                <h2 class="text-white">@ViewBag.countBill</h2>

                            </div>
                            <span class="float-right display-5 opacity-5">
                                <i class="fa fa-money"></i>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-sm-6">
                    <div class="card gradient-3">
                        <div class="card-body">
                            <h3 class="card-title text-white">Khách hàng</h3>
                            <div class="d-inline-block">
                                <h2 class="text-white">@ViewBag.countUser</h2>
                               @* <p class="text-white mb-0">Jan - March 2019</p>*@
                            </div>
                            <span class="float-right display-5 opacity-5">
                                <i class="fa fa-users"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
           
            <div class="row mt-3">
                <div class="col-lg-6">
                    <div class="d-flex my-2">
              
                        <input type="text" hidden class="form-control" id="order_count" value="@ViewBag.Orders" />
                        <input type="date" class="form-control" id="date_from" value="@(((DateTime)ViewBag.fromDate).ToString("yyyy-MM-dd"))" />
                        <input type="date" class="form-control mx-2" id="date_to" value="@(((DateTime)ViewBag.toDate).ToString("yyyy-MM-dd"))" />
                        <button onclick="handleFilter()" class="btn btn-primary mx-2 filterBtn">Lọc </button>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <!-- <h4 class="card-title">Đơn hàng</h4> -->
                            <div class="table-responsive">
                                <table class="table header-border table-hover verticle-middle">
                                    <thead>
                                        <tr>
                                            <th scope="col">Đơn hàng</th>
                                            <th class="tbl-center" scope="col">Số lượng</th>
                                            <th scope="col">Doanh thu</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Tổng đơn</td>
                                            <td class="tbl-center qtyNew">@ViewBag.BillTotal</td>
                                            <td class="tbl-center"> @String.Format("{0:N0} VNĐ", ViewBag.Revenue * 1000)</td>
                                        </tr>

                                        <tr>
                                            <td>Chưa duyệt</td>
                                            <td class="tbl-center qtySuccess">@ViewBag.BillWaiting</td>
                                            <td class="tbl-center sales">0</td>
                                        </tr>
                                        <tr>
                                            <td>Đã duyệt</td>
                                            <td class="tbl-center qtyFalse">@ViewBag.BillAccept</td>
                                            <td class="tbl-center">0</td>
                                        </tr>
                                        <tr>
                                            <td>Đang vận chuyển</td>
                                            <td class="tbl-center qtyFalse">@ViewBag.BillShipping</td>
                                            <td class="tbl-center">0</td>
                                        </tr>
                                        <tr>
                                            <td>Thành công</td>
                                            <td class="tbl-center qtyFalse">@ViewBag.BillSuccess</td>
                                            <td class="tbl-center"> @String.Format("{0:N0} VNĐ", ViewBag.Revenue * 1000)</td>
                                        </tr>
                                        <tr>
                                            <td>Hủy</td>
                                            <td class="tbl-center">@ViewBag.BillCancel</td>
                                            <td class="tbl-center">0</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Số đơn trong tuần</h4>
                            <div id="chart-with-area"
                                 class="ct-chart ct-golden-section"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/admin/jquery")
